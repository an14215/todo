<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.developer.todo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseCategoryActivity" />
        <activity android:name=".AddCategoryActivity" />
        <activity android:name=".AddRecordActivity" />
        <activity android:name=".AllCategoryActivity" />
        <activity android:name=".PieChartActivity" />
        <activity android:name=".StatisticResultActivity" />
        <activity android:name=".StatisticsActivity"></activity>

        <service android:name=".database.DatabaseService" />
    </application>

</manifest>